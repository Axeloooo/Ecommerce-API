<h1>{{title}}</h1>

<form action="http://localhost:8080/api/sessions/login" method="post">
  <fieldset>
    <legend>Login</legend>
    
    <label for="email">Email:</label><br>
    <input type="email" name="email" placeholder="Email" required><br>
    
    <label for="password">Password:</label><br>
    <input type="password" name="password" placeholder="Password" required><br>

    <hr>

    <input type="submit" value="Login">
  </fieldset>
</form>

<div>
  <a href="http://localhost:8080/auth/register"><button>Register</button></a>
</div>

<div>
  <a href="http://localhost:8080/api/sessions/github"><button>Login with GitHub</button></a>
</div>
